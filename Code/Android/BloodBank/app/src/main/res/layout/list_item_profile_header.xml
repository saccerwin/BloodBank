<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:padding="@dimen/padding_10"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_circle_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/avatar" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="@dimen/padding_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_position"
                android:gravity="center"
                android:textSize="@dimen/padding_20"
                android:text="@string/position"/>
            <TextView
                android:textColor="@color/blue_app"
                android:textSize="30sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name"

                android:text="@string/nav_name"/>
           <!--<Button-->
               <!--android:layout_width="150dp"-->
               <!--android:layout_marginTop="@dimen/padding_10"-->
               <!--android:layout_height="30dp"-->
               <!--android:padding="@dimen/padding_5"-->
               <!--android:background="@drawable/button_radius_blue_app"-->
               <!--android:textColor="@color/colorWhite"-->
               <!--android:textSize="12sp"-->
               <!--android:id="@+id/btn_call_admin"-->
               <!--android:text="@string/btn_call_admin"/>-->

        </LinearLayout>

        <ImageView
            android:layout_width="60dp"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_height="60dp"
            android:id="@+id/imgView_blood"
            android:contentDescription="@string/app_name"
            android:src="@drawable/profile_blood_a"/>

    </LinearLayout>
