<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name_club"
            android:textSize="@dimen/text_size_25"
            android:textColor="@color/bg_screen"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:id="@+id/tv_name_club"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/padding_20">

            <ImageView
                android:contentDescription="@string/facebook_club"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/avatar_club"
                android:id="@+id/imgView_logo_club"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/padding_10"
                android:paddingStart="@dimen/padding_10"
                android:paddingRight="0dp"
                android:paddingEnd="0dp"
                android:paddingTop="@dimen/padding_20"

                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/count_member_club"
                    android:textSize="18sp"
                    android:textColor="@color/bg_screen_blur"
                    android:id="@+id/tv_count_member"
                    android:layout_marginBottom="@dimen/padding_10"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/address_club"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@android:color/black"
                    android:id="@+id/tv_address"
                    android:layout_marginBottom="@dimen/padding_10"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/facebook_club"
                    android:textSize="@dimen/text_size_15"
                    android:textColor="@android:color/black"
                    android:id="@+id/tv_facebook"
                    android:layout_marginBottom="@dimen/padding_10"/>

            </LinearLayout>

        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>
