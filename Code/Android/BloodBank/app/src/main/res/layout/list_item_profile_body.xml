<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_margin="@dimen/padding_20"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_manager_club"
        android:layout_marginTop="@dimen/padding_10"
        android:id="@+id/imgView_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_30"
        android:layout_marginStart="@dimen/padding_30"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count_donate_blood"
            android:textSize="18sp"

            android:id="@+id/tv_name_menu"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/padding_30"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="@dimen/padding_30"
            android:layout_marginTop="@dimen/padding_5"
            android:background="@color/cardview_dark_background"/>

    </LinearLayout>


</LinearLayout>
