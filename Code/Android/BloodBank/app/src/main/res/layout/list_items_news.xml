<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_10"
    app:cardCornerRadius="10dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_10"
            android:weightSum="5">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar_club"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@drawable/avatar_club" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:layout_weight="2.5"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_club"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLength="35"
                    android:text="@string/name_club"
                    android:textColor="@color/bg_screen"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_time_post"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="@string/time_post"
                    android:textColor="@color/grey_700"
                    android:textSize="12sp" />


            </LinearLayout>

            <Button
                android:id="@+id/btnViewDetailClub"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginStart="@dimen/padding_10"
                android:layout_weight="1.5"
                android:background="@drawable/button_radius_blue_app"
                android:text="@string/view_club"
                android:textColor="@color/colorWhite"
                android:textSize="8sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding_10"
            android:text="@string/detail_post"
            android:textColor="@color/color_black_blur"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#88aba3a3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <Button
                android:id="@+id/btn_count_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_blood"
                android:drawablePadding="@dimen/padding_5"
                android:drawableStart="@drawable/ic_blood"
                android:text="@string/count_register_donation_blood"
                android:textSize="12sp" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="@string/comment"
                android:textColor="@color/blue_600" />

            <TextView
                android:id="@+id/tv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_marginStart="@dimen/padding_10"
                android:layout_weight="1"
                android:paddingEnd="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="@dimen/padding_10"
                android:paddingStart="0dp"
                android:text="@string/share"
                android:textColor="@color/blue_600" />
        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

