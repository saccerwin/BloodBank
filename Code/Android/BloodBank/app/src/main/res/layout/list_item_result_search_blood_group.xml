<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/llLayoutProfileSearch"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:background="@drawable/name_user_line_border"
                android:text="@string/nav_name"
                android:textStyle="bold"
                android:paddingTop="9dp"
                android:textSize="12sp"
                android:gravity="center_horizontal"
                android:id="@+id/tv_name_user" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_circle_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/avatar" />
            <TextView
                android:layout_marginTop="@dimen/padding_5"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@drawable/textview_background_radius"
                android:text="@string/position"
                android:textColor="@color/colorWhite"
                android:paddingTop="3dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp"
                android:textSize="10sp"
                android:id="@+id/tv_position"/>
            <TextView
                android:layout_marginTop="@dimen/padding_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_club"
                android:textSize="@dimen/text_size_10"
                android:textStyle="bold"
                android:id="@+id/tv_name_club"/>

            <View
                android:layout_marginTop="@dimen/padding_20"
                android:layout_width="match_parent"
                android:background="@color/cardview_dark_background"
                android:layout_height="1dip"/>

        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_marginTop="@dimen/padding_5"
            android:orientation="horizontal">
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/imgView_icon_blood"
                android:layout_height="match_parent"
                android:src="@drawable/icon_a"/>
            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/imgView_icon_sms"
                android:layout_height="match_parent"
                android:src="@drawable/icon_sms"/>

            <ImageView
                android:contentDescription="@string/app_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/icon_phone"
                android:id="@+id/imgView_icon_phone" />

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>
