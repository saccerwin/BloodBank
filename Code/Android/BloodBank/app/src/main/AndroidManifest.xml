<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.admin.bloodbank">


<uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:configChanges="orientation"
        android:screenOrientation="portrait"
        android:name=".applications.Application"
        android:theme="@style/MyMaterialTheme.Base">
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />

        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>


        <activity android:name=".activities.IntroductionActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity" android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity android:name=".activities.AddDescriptionUserActivity">

        </activity>
        <activity android:name=".activities.NavigationDrawerMainActivity">

        </activity>
        <activity android:name=".activities.ResultSearchBloodGroupActivity"  />
        <activity android:name=".activities.FilterSearchClub" />
        <activity android:name=".activities.EditProfileActivity" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".activities.ViewDetailClubActivity"/>
        <activity android:name=".activities.CommentActivity"/>
        <activity android:name=".activities.ProfileSearchActivity"/>
        <activity android:name=".activities.SearchMemberGroupActivity" />
        <activity android:name=".activities.RegisterActivity" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".activities.ForgotPasswordActivity"/>
        <activity android:name=".activities.InstructionFeatureActivity"/>
        <activity android:name=".activities.MemberRegisterDonationActivity"/>
        <activity android:name=".activities.AddNewDiscussActivity" android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".activities.ClubContentJoinActivity"/>
    </application>
</manifest>
